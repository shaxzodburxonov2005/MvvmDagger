<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyMVVMNuntium" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>

    </style>

    <style name="Screen">
        <item name="android:background">#FFF</item>

    </style>

    <style name="TEXT">
        <item name="android:textColor">#666C8E</item>

    </style>
    <style name="TEXTac">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="textburger">
        <item name="android:textColor">#C8C7C7</item>

    </style>
    <style name="textsaved">
        <item name="android:textColor">#7C82A1</item>

    </style>
    <style name="bottom_navigation">
        <item name="android:background">@drawable/shape_bottom</item>
        <item name="itemIconTint">#6E6D6D</item>
        <item name="itemTextColor">#2196F3</item>

    </style>

    <style name="toolbar">
        <item name="android:backgroundTint">@color/white</item>

    </style>

    <style name="BUTTON">
        <item name="android:backgroundTint">#F3F4F6</item>
        <item name="android:textColor">#FFF</item>

    </style>






    <style name="Theme.MyMVVMNuntium.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="colorPrimary">#32000000</item>
    </style>


    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


    <style name="MyAppbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">#C8C7C7</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>