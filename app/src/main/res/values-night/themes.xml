        <item name="android:textColor">#FFFFFF</item>

    </style>
    <style name="textburger">
        <item name="android:textColor">#C8C7C7</item>

    </style>
    <style name="bottom_navigation">
        <item name="android:background">@drawable/shape_bottomdark</item>
        <item name="itemIconTint">#A5A1A1</item>
        <item name="itemTextColor">#7EC2F8</item>

    </style>
    <style name="textsaved">
        <item name="android:textColor">#C8C7C7</item>

    </style>
    <style name="toolbar">
        <item name="android:backgroundTint">#232323</item>

    </style>

    <style name="BUTTON">
